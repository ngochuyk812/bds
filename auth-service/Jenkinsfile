pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'auth-service'
    }

    stages {
        stage('Build') {
            steps {
                sh 'cd auth-service'
                sh 'docker-compose build'
            }
        }

        stage('Deploy') {
            steps {
                sh 'cd auth-service'
                sh 'docker compose up -d'
            }
        }
    }

    post {
        failure {
            echo "Build failed"
        }
        success {
            echo "App is running!"
        }
    }
}
